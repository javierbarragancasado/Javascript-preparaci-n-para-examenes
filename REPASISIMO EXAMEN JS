<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Resumen Personas</title>
</head>
<body>
  <h1>ðŸ“Š Resumen desde JSON</h1>
  <div id="resultados"></div>

  <script>
    fetch("people.json")
      .then(res => res.json()) // Convertimos la respuesta a JSON
      .then(data => {
        const gente = data.people;

        const resultados = document.getElementById("resultados");

        // âœ… 1. Solteros y Casados
        const solteros = gente.filter(p => !p.casado);
        const casados  = gente.filter(p => p.casado);

        // âœ… 2. Persona mayor y menor (reduce)
        const mayor = gente.reduce((max, p) => p.edad > max.edad ? p : max);
        const menor = gente.reduce((min, p) => p.edad < min.edad ? p : min);

        // âœ… 3. Edad mÃ¡xima y mÃ­nima (Math.max + filter)
        const edades = gente.map(p => p.edad);
        const edadMaxima = Math.max(...edades);
        const edadMinima = Math.min(...edades);

        const personasMax = gente.filter(p => p.edad === edadMaxima);
        const personasMin = gente.filter(p => p.edad === edadMinima);

        // âœ… 4. Mensajes que vamos a mostrar
        const mensajes = [
          `ðŸ§â€â™‚ï¸ El nÃºmero de solteros es ${solteros.length}`,
          `ðŸ’ El nÃºmero de casados es ${casados.length}`,
          `ðŸ§‘â€ðŸŽ“ Los nombres de los solteros son: ${solteros.map(p => p.nombre).join(", ")}`,
          `ðŸ‘´ La persona de mayor edad (reduce) es ${mayor.nombre}, con ${mayor.edad} aÃ±os`,
          `ðŸ§’ La persona de menor edad (reduce) es ${menor.nombre}, con ${menor.edad} aÃ±os`,
          `ðŸ”º Edad mÃ¡xima: ${edadMaxima}. Personas con esa edad: ${personasMax.map(p => p.nombre).join(", ")}`,
          `ðŸ”» Edad mÃ­nima: ${edadMinima}. Personas con esa edad: ${personasMin.map(p => p.nombre).join(", ")}`
        ];

        // âœ… 5. Mostrar en la pÃ¡gina
        mensajes.forEach(texto => {
          const p = document.createElement("p");
          p.textContent = texto;
          resultados.appendChild(p);
        });
      });
  </script>
</body>
</html>
